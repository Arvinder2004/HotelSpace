<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 class="mb-4">My Bookings</h3>
        
        <% if(bookings.length === 0) { %>
            <div class="alert alert-primary" role="alert">
                You haven't booked any stays yet! <a href="/listings" class="alert-link">Explore Hotels</a>
            </div>
        <% } %>

        <div class="row">
        <% for(let booking of bookings) { %>
            <div class="card col-12 mb-4 ps-0 shadow-sm">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img 
                            src="<%= booking.listing.image && booking.listing.image.url ? booking.listing.image.url : 'https://images.unsplash.com/photo-1499793983690-e29da59ef1c2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60' %>" 
                            class="img-fluid rounded-start h-100" 
                            alt="Listing Image" 
                            style="object-fit: cover; min-height: 200px;"
                        >
                    </div>
                    
                    <div class="col-md-8">
                        <div class="card-body p-4"> <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title fw-bold"><%= booking.listing.title %></h5>
                                <span class="badge rounded-pill bg-success"><%= booking.status %></span>
                            </div>
                            
                            <p class="card-text mt-3">
                                <small class="text-secondary">
                                    <i class="fa-regular fa-calendar-check me-2"></i> 
                                    <b>Check-In:</b> <%= new Date(booking.checkIn).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %> 
                                    <br>
                                    <i class="fa-regular fa-calendar-xmark me-2"></i> 
                                    <b>Check-Out:</b> <%= new Date(booking.checkOut).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                </small>
                            </p>
                            
                            <div class="d-flex gap-3 mt-4">
                                <a href="/listings/<%= booking.listing._id %>" class="btn btn-primary">View Hotel Details</a>
                                
                                <form method="POST" action="/listings/<%= booking.listing._id %>/bookings/<%= booking._id %>?_method=DELETE">
                                    <button class="btn btn-outline-danger">Cancel Booking</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        </div>
        
    </div>
</div>